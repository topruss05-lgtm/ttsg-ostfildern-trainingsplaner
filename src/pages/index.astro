---
import Layout from '../layouts/Layout.astro';

const sessionCookie = Astro.cookies.get('session');
const userId = sessionCookie?.value;

let user = null;
if (userId) {
  const { db } = await import('../lib/db');
  user = await db.users.getById(userId);
}
