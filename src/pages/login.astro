---
import Layout from '../layouts/Layout.astro';

let error = '';

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const email = formData.get('email')?.toString();
    const password = formData.get('password')?.toString();

    if (email && password) {
      const bcrypt = (await import('bcryptjs')).default;
      const { db } = await import('../lib/db');

      const user = await db.users.getByEmail(email);

      if (user && await bcrypt.compare(password, user.passwordHash)) {
        Astro.cookies.set('session', user.id, {
          path: '/',
          httpOnly: true,
          secure: import.meta.env.PROD,
          sameSite: 'lax',
          maxAge: 60 * 60 * 24 * 7 // 7 Tage
        });

        return Astro.redirect(user.role === 'trainer' ? '/trainer/dashboard' : '/trainings');
      } else {
        error = 'Ung√ºltige E-Mail oder Passwort';
      }
    }
  } catch (e) {
    error = 'Ein Fehler ist aufgetreten';
  }
}
---

<Layout title="Anmelden">
  <div class="max-w-md mx-auto">
    <div class="bg-white p-8 rounded-lg shadow-md border border-gray-200">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Anmelden</h2>

      {error && (
        <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-md">
          <p class="text-red-800">{error}</p>
        </div>
      )}

      <form method="POST" class="space-y-4">
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
            E-Mail
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
            Passwort
          </label>
          <input
            type="password"
            id="password"
            name="password"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <button
          type="submit"
          class="w-full px-4 py-2 text-white bg-blue-600 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
          Anmelden
        </button>
      </form>

      <p class="mt-4 text-sm text-gray-600 text-center">
        Noch kein Account?
        <a href="/register" class="text-blue-600 hover:text-blue-700 font-medium">
          Jetzt registrieren
        </a>
      </p>
    </div>
  </div>
</Layout>
